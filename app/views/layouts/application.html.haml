!!!
%html
  %head
    %title Round
    :coffeescript
      window.TryMeSuckaz =
        userIsTim: #{tim?}
    = javascript_include_tag "application"
    = stylesheet_link_tag    "application", media: "all"
    = csrf_meta_tags
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{name: 'apple-mobile-web-app-capable', content: 'yes'}
    %meta{name: 'apple-mobile-web-app-status-bar-style', content: 'black-translucent'}
  %body
    %nav#top-nav.navbar.navbar-fixed-top.navbar-default{role: 'navigation'}
      .navbar-header
        %a.navbar-brand{:href => "#"}
          %i#app-spinner.icon-usd
          Round
        %button.navbar-toggle.pull-right{"data-target" => ".topnav-main", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .collapse.navbar-collapse.topnav-main
        %ul.nav.navbar-nav
          %li
            %a#now-playing
          %li#search-link
            %a Search
          %li#queue-link
            %a See Queue
    %ol#breadcrumb.breadcrumb.hide
    #queue.hide
    #idle.hide
    #search.hide
    #browse.hide
    #tim.hide
    #playlists.hide
