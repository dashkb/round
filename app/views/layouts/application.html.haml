!!!
%html
  %head
    %title Round
    :coffeescript
      window.TryMeSuckaz =
        userIsTim: #{tim?}
    = javascript_include_tag "application"
    = stylesheet_link_tag    "application", media: "all"
    = csrf_meta_tags
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{name: 'apple-mobile-web-app-capable', content: 'yes'}
    %meta{name: 'apple-mobile-web-app-status-bar-style', content: 'black-translucent'}
  %body
    .full
      #idle.hide
      #browse.hide
      #tim.hide
      #playlists.hide
      #queue.hide

    - cache('artists-and-genres-bootstrap') do
      :coffeescript
        window.artists = #{Artist.includes(:artist_genres).load.to_json}
        window.genres  = #{Genre.all.to_json}
